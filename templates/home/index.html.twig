{% extends 'layouts/base.html.twig' %}

{% block title %} Accueil | {{ parent() }} {% endblock %}

{% block body %}
{# Zone du carousel avec backgroung #}
<div id="carousel-custom-bg" class="py-5">
    {# Carousel #}
    <div id="resilienceCarouselIndicators" class="carousel slide" data-bs-ride="carousel">
        {# Indicators #}
        <div class="carousel-indicators w-50 mx-auto">
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="3"
                    aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="4"
                    aria-label="Slide 5"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="5"
                    aria-label="Slide 6"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="6"
                    aria-label="Slide 7"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="7"
                    aria-label="Slide 7"></button>
            <button type="button" data-bs-target="#resilienceCarouselIndicators" data-bs-slide-to="8"
                    aria-label="Slide 8button"></button>
        </div>
        {# Images #}
        <div class="carousel-inner">
            {# Qualiopi #}
            <div class="carousel-item active">
                <img src="{{ asset('build/images/homepage/qualiopi.png') | imagine_filter("carousel_container_thumb")
                     }}" class="d-block carousel-item-size mx-auto" alt="Qualiopi Image">
            </div>
            {# DataDock #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/datadock.png') | imagine_filter("carousel_container_thumb")
                     }}" class="d-block carousel-item-size mx-auto" alt="Data Dock Image">
            </div>
            {# I-cert #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/i-cert.png') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block carousel-item-size mx-auto" alt="I-Cert Image">
            </div>
            {# Best practice #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/best practice.jpg') | imagine_filter("carousel_container_thumb") }}" class="d-block carousel-item-size mx-auto"
                     alt="Best Practice Image">
            </div>
            {# Carreer #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/carreer.jpg') | imagine_filter("carousel_container_thumb")
                     }}" class="d-block carousel-item-size mx-auto" alt="Career Image">
            </div>
            {# Consulting #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/consulting.jpg') | imagine_filter("carousel_container_thumb")
                     }}" class="d-block carousel-item-size mx-auto" alt="Consulting image">
            </div>
            {# Job search #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/job search.jpg') | imagine_filter("carousel_container_thumb")
                     }}" class="d-block carousel-item-size mx-auto" alt="Job Search Image">
            </div>
            {# success #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/success.jpg') | imagine_filter("carousel_container_thumb")
                     }}" class="d-block carousel-item-size mx-auto" alt="Success Image">
            </div>
            {# Bilan compétences #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/bilan competence.png') | imagine_filter("carousel_container_thumb") }}" class="d-block carousel-item-size mx-auto"
                     alt="Bilan Compétences Image">
            </div>
        </div>
        {# Arrow: Left #}
        <button class="carousel-control-prev" type="button" data-bs-target="#resilienceCarouselIndicators"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        {# Arrow: Right #}
        <button class="carousel-control-next" type="button" data-bs-target="#resilienceCarouselIndicators"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    {# /Carousel #}
</div>

{# Section : presentation #}
<section class="presentation">
    <div class="container">
        {# Introduction #}
        <div class="text-center">
            <h1 class="h3 mb-5">
                <em>
                    Vous accompagner durablement
                    <br><br>
                    dans vos projets d'entreprise ou individuels
                    <br><br>
                    en vous proposant des solutions souples et adaptées
                </em>
            </h1>
            <a href="{{ path('app_about_us') }}" class="btn btn-custom-rounded btn-lg">
                À propos
                <i class="fas fa-angle-double-right ml-2"></i>
            </a>
        </div>
    </div>
</section>

{# Parallax start : training #}
<section>
    {# Makes the entire image area clickable #}
    <a href="{{ path('app_training') }}">
        <div class="bg-img-training parallax">
            <div class="h2 caption">
                <span class="border text-uppercase">
                    Nos formations
                </span>
            </div>
        </div>
    </a>
    {# Content section : trainings links #}
    <div class="container content-layout">
        <h5 class="text-center">
            Organisme de formation référencé sur <em><u>dataDock</u></em> et certifié qualité
            <em><u>Qualiopi</u></em>.
        </h5>
        {# Cards formation #}
        <div class="row justify-content-between text-center mt-5">
            {# Card formations RH #}
            <div class="col-md-5 mb-3">
                <div class="card h-100 rounded">
                    <div class="card-header bg-transparent border-0">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Ressources Humaines</h5>
                        <p class="card-text">
                            <strong class="text-uppercase">{{ project.name }}</strong> se veut être votre partenaire
                            dans le domaine de la Formation en Ressources Humaines, de l'ingénierie pédagogique à
                            l'animation.
                        </p>

                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_training_category', {categorie: 'rh'}) }}"
                           class="btn btn-custom-color btn-block">
                            Voir ces formations
                        </a>
                    </div>
                </div>
            </div>
            {# Card formations autres #}
            <div class="col-md-5 mb-3">
                <div class="card h-100 rounde">
                    <div class="card-header bg-transparent border-0">
                        <i class="fas fa-chalkboard-teacher fa-3x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Autres Formations</h5>
                        <p class="card-text">
                            <strong class="text-uppercase">{{ project.name }}</strong> propose également d'autres
                            formations dans d'autres domaines. La conception d'un module doit répondre à vos attentes et
                            à un besoin. Chaque formation est adaptable à vos besoins et attentes.
                        </p>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_training_category', {categorie: 'other'}) }}"
                           class="btn btn-custom-color btn-block">
                            Voir ces formations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{# Image element : our solutions #}
<section>
    <div class="bg-img-oursolutions parallax">
        {# Link to the anchor #}
        <a href="#nos-solutions">
            <div class="h2 caption">
                <span class="border text-uppercase">
                    Nos solutions
                </span>
            </div>
        </a>
    </div>
    {# Content section : other solutions #}
    <div class="container content-layout">

        {# Row #1: Cards our solutions #}
        <div class="row justify-content-between text-center">
            {# Card Skills assessment #}
            <div class="col-md-4 mb-5">
                <div class="card card-hover card-custom-bg h-100 rounded shadow">
                    <div class="card-header bg-transparent border-0">
                        <i class="fas fa-question-circle fa-3x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Bilan de compétences</h5>
                        <p class="card-text text-justify mt-4">
                            Pour changer de branche
                            d’activité, évoluer dans votre entreprise, retrouver un emploi ou simplement faire le point,
                            le
                            <strong>
                                bilan de compétences
                            </strong>
                            est souvent une étape utile.

                        </p>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_skills_assessment') }}" class="btn btn-custom-color btn-sm btn-block">
                            Voir
                        </a>
                    </div>
                </div>
            </div>
            {# Card Recrutement #}
            <div class="col-md-4 mb-5">
                <div class="card card-hover h-100 card-custom-bg rounded shadow">
                    <div class="card-header bg-transparent border-0">
                        <i class="fas fa-newspaper fa-3x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Espace Recrutement</h5>
                        <p class="card-text text-justify mt-4">
                            Vous accompagner dans vos recrutements, dans le respect de la déontologie et de la
                            confidentialité ; en proposant des solutions souples et adaptées à vos contraintes, pour
                            cela vous pouvez opter pour l’une de nos 3 solutions.
                        </p>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_recruitment') }}" class="btn btn-custom-color btn-sm btn-block">
                            Voir
                        </a>
                    </div>
                </div>
            </div>
        </div>

        {# Row #2: Cards our solutions #}
        <div class="row justify-content-between text-center" id="nos-solutions">
            {# Card Carreer #}
            <div class="col-md-4 mb-5">
                <div class="card card-hover h-100 card-custom-bg rounded shadow">
                    <div class="card-header bg-transparent border-0">
                        <i class="fas fa-file-pdf fa-3x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Espace Carrière</h5>
                        <p class="card-text text-justify mt-4">
                            Bénéficiez d’un accompagnement individuel avec un spécialiste des Ressources Humaines,
                            expert en recrutement dans le but d’optimiser votre employabilité.
                        </p>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_career') }}" class="btn btn-custom-color btn-sm btn-block">
                            Voir
                        </a>
                    </div>
                </div>
            </div>
            {# Card Orientation #}
            <div class="col-md-4 mb-5">
                <div class="card card-hover h-100 card-custom-bg rounded shadow">
                    <div class="card-header bg-transparent border-0">
                        <i class="fas fa-map-signs fa-3x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Espace Orientation</h5>
                        <p class="card-text text-justify mt-4">
                            Le choix de l’orientation est un facteur déterminant qui aura un impact fort sur
                            l’épanouissement personnel.
                            <br>
                            Un accompagnement individuel et personnalisé destiné aux collégiens, lycéens et
                            étudiants.
                        </p>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_orientation') }}" class="btn btn-custom-color btn-sm btn-block">
                            Voir
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {# Row #3: Cards our solutions #}
        <div class="row justify-content-around text-center">
            {# Card Job opportunities #}
            <div class="col-md-4 mb-3">
                <div class="card card-hover h-100 card-custom-bg rounded shadow">
                    <div class="card-header bg-transparent border-0">
                        <i class="fas fa-user-tie fa-3x"></i>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Offre(s) d'Emploi</h5>
                        <p class="card-text text-justify mt-4">
                            Pour une opportunité de carrière ou pportunité de carrière, vous pouvez remplir le
                            questionnaire de candidature.
                        </p>
                    </div>
                    <div class="p-2">
                        <a href="{{ path('app_job_offer') }}" class="btn btn-custom-color btn-sm btn-block">
                            Voir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{# Image element : feedback #}
<section>
    {# Makes the entire image area clickable #}
    <a href="{{ path('app_testimonies') }}">
        <div class="bg-img-feedback parallax">
            <div class="h2 caption">
                <span class="border text-uppercase">
                    Témoignages
                </span>
            </div>
        </div>
    </a>
    {# Content section : feedback #}
    <div class="container content-layout">
        <h6 class="text-center">
            Voici ce qu'ils en disent...
        </h6>

        {# Récupération du nombre de témoignages #}
        {% set testimonies_count = testimonies | length %}
        {# Si la tables Témoignages n'est pas vide on affiche les témoignages #}
        {% if testimonies_count > 0 %}
        {# Affichage de 3 témoignages #}
        <div class="row justify-content-around text-center mt-5">
            {% for testimonial in testimonies %}
            <div class="col-md-3 mb-3">
                <div class="card border-0">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ testimonial.initials }}
                        </h5>
                        <p class="card-text text-right">
                            <small class="text-muted">
                                {{ testimonial.job }}
                            </small>
                        </p>
                        <div class="card-text text-muted">
                            {{ testimonial.testimony|raw }}
                        </div>
                        <p>
                            <i class="fas fa-quote-right"></i>
                        </p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="alert alert-danger mt-5 text-center">
            <p class="lead mt-3">
                Il y a {{ testimonies_count }} Témoignages à afficher pour le moment.
            </p>
        </div>
        {% endif %}

        {# Bouton de redirection vers la page des témoignages #}
        <div class="row text-center mt-5">
            <div class="col-md-12">
                <a href="{{ path('app_testimonies') }}" class="btn btn-lg btn-outline-custom">
                    Pas encore sûr ? Découvrez plus de témoignages
                    <i class="fas fa-angle-double-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

{# Parallax end : training #}
<section>
    {# Makes the entire image area clickable #}
    <a href="{{ path('app_contact') }}">
        <div class="bg-img-training parallax">
            <div class="h2 caption">
                <span class="border text-uppercase">
                    Plus d'informations
                </span>
            </div>
        </div>
    </a>
</section>

{% endblock %}
