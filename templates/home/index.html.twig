{% extends 'layouts/base.html.twig' %}

{% block title %} Accueil | {{ parent() }} {% endblock %}

{% block body %}
{# Zone du carousel avec backgroung #}
<div id="carousel-custom-bg" class="shadow">
    {# Carousel #}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
        </ol>
        <div class="carousel-inner">
            {# Best practice #}
            <div class="carousel-item active">
                <img src="{{ asset('build/images/homepage/best practice.jpg') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="Best Practice Image">
            </div>
            {# Carreer #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/carreer.jpg') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="Career Image">
            </div>
            {# Consulting #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/consulting.jpg') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="Consulting image">
            </div>
            {# Job search #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/job search.jpg') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="Job Search Image">
            </div>
            {# success #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/success.jpg') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="Success Image">
            </div>
            {# Bilan compétences #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/bilan competence.png') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="Bilan Compétences Image">
            </div>
            {# DataDock #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/datadock.png') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="Data Dock Image">
            </div>
            {# I-cert #}
            <div class="carousel-item">
                <img src="{{ asset('build/images/homepage/i-cert.png') | imagine_filter("carousel_container_thumb") }}"
                     class="d-block w-100" alt="I-Cert Image">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    {# /Carousel #}
</div>

{# Content section : presentation #}
<section class="py-5">
    <div class="container">
        {# Introduction #}
        <div class="text-center">
            <h2 class="h4 text-muted mb-5">
                <em>
                    Vous accompagner durablement
                </em>
            </h2>
            <h2 class="h4 text-muted mb-5">
                <em>
