{{ form_start(candidatureForm) }}

{# Row: firstname and lastname #}
<div class="row mb-3">
    {# Firstname #}
    <div class="col-md-6">
        <div>
            {{ form_row(candidatureForm.firstName) }}
        </div>
    </div>

    {# Lastname #}
    <div class="col-md-6">
        <div>
            {{ form_row(candidatureForm.lastName) }}
        </div>
    </div>
</div>

{# Row: email #}
<div class="row mb-3">
    {# Email #}
    <div class="col-md-12">
        <div>
            {{ form_row(candidatureForm.email) }}
        </div>
    </div>
</div>

{# Row: upload #}
<div class="row mb-3">
    <div class="col-md-12">
        <div>
            <div class="row mx-0">
                {{ form_label(candidatureForm.uploadFile, null, {
                                'label_attr': {'class': 'mr-3'}
                            }) }}
                {{ form_help(candidatureForm.uploadFile) }}
            </div>
            {{ form_widget(candidatureForm.uploadFile, {
                'attr':  {
                    'placeholder': 'Choisissez un fichier',
                }
            }) }}

            <div class="form-error">
                {{ form_errors(candidatureForm.uploadFile) }}
            </div>
        </div>
    </div>
</div>

{# Row: message #}
<div class="row mb-3">
    <div class="col-md-12">
        <div class="row mx-0">
            {{ form_label(candidatureForm.message, null, {
                'label_attr': {'class': 'mr-3'}
            }) }}
            {{ form_help(candidatureForm.message) }}
        </div>
        {{ form_widget(candidatureForm.message) }}

        <div class="form-error">
            {{ form_errors(candidatureForm.message) }}
        </div>
    </div>
</div>

{# Button: send #}
<div class="row justify-content-around mt-4 mx-0">
    <button class="btn btn-custom-color btn-lg col-md-4 mb-3" type="submit">
        Envoyer
    </button>
    <button class="btn btn-light btn-lg col-md-4 mb-3" type="reset">
        Effacer
    </button>
</div>

{{ form_end(form) }}