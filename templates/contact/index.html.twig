{% extends 'layouts/base.html.twig' %}

{% block title %} Contact | {{ parent() }} {% endblock %}

{% block body %}
<div class="container">
    {# Page header #}
    <div class="page-header">
        <h1 class="text-center">
            <i class="fas fa-paper-plane"></i>
            Contact
        </h1>
    </div>

    {# Section : Find us #}
    <section class="text-muted my-5 p-2">
        <div class="row ">
            <h2 class="mb-4">
                Où nous trouver ?
            </h2>
            {# Google map iframe #}
            <div class="col-md-9" style="height: 400px;">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2598.6631696341406!2d6.164363315866743!3d49.35852347331455!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479524db8b354c37%3A0xf28112bf3320a692!2sRESILIENCE-RH!5e0!3m2!1sfr!2sfr!4v1603120520417!5m2!1sfr!2sfr"
                        width="100%" height="400" allowfullscreen="" aria-hidden="false" tabindex="0"
                        class="border rounded-lg shadow">
                </iframe>
            </div>
            {# Contact information #}
            <div class="col-md-3">
                <ul class="list-unstyled mb-0">
                    <li class="text-center mt-4">
                        <p>
                            <i class="fas fa-map-marker-alt fa-lg"></i>
                        </p>
                        <p>
                            <strong class="text-uppercase">
                                {{ project.name }}
                            </strong>
                            <br>
                            6, place au bois
                            <br>
                            57100 Thionville
                        </p>
                    </li>
                    <li class="text-center">
                        <i class="fas fa-phone fa-lg mt-4"></i>
                        <p>(+33) 3 82 56 62 67</p>
                    </li>
                    <li class="text-center">
                        <i class="fab fa-skype fa-lg mt-4"></i>
                        <p class="mb-0">
                            resliencerh
                        </p>
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <hr>

    {# Section : Contact us #}
    <section class="my-5 p-2">
        <div class="text-muted">
            <h2>
                Nous contacter
            </h2>
            <p>
                Pour joindre
                <strong class="text-uppercase">
                    {{ project.name }}
                </strong>
                , ou obtenir des informations complémentaires ; vous pouvez remplir le formulaire ci-dessous, nous
                reprendrons contact avec vous.
            </p>
        </div>
        {# Contact form include #}
        <div class="my-5">
            {{ include('contact/_form.html.twig', {form: contactForm})  }}
        </div>
    </section>
</div>
{% endblock %}